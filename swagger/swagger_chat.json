  "servers": [
    {
      "url": "http://54.248.36.249/api/1.0"
    }
  ],
  "paths": {
    "/chat/get-chat-records": {
      "get": {
        "tags": [
          "get-chat-records"
        ],
        "summary": "get all chat messages between two users",
        "description": "get all chat messages between two users",
        "operationId": "get-chat-records",
        "parameters": [
          {
            "name": "theOtherUserId",
            "in": "query",
            "description": "The other user id that try to make contact to",
            "required": true,
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 1
            }
          },
          {
            "name": "room",
            "in": "query",
            "description": "If two users chatted before, they will have chatting room id",
            "required": false,
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": "1AND2"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/chat-message-info"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "User without token, or token expired",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unauthorized."
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Not a member",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Forbidden."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/chat/get-chat-user-list": {
      "get": {
        "tags": [
          "get-chat-user-list"
        ],
        "summary": "get all user list that the user have chatted to",
        "description": "get all user list that the user have chatted to",
        "operationId": "get-chat-user-list",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/chat-user-list-array"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "User without token, or token expired",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unauthorized."
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Not a member",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Forbidden."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "chat-message-info": {
        "required": [
          "receiver_id",
          "sender_id",
          "history_message"
        ],
        "type": "object",
        "properties": {
          "my_user_id": {
            "type": "integer",
            "example": 1
          },
          "other_user_id": {
            "type": "intger",
            "example": 2
          },
          "history_messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/chat-messages"
            }
          }
        }
      },
      "chat-messages": {
        "required": [
          "receiver_id",
          "sender_id",
          "sender_username",
          "receiver_username",
          "message",
          "send_at"
        ],
        "type": "object",
        "properties": {
          "sender_id": {
            "type": "integer",
            "example": 1
          },
          "receiver_id": {
            "type": "integer",
            "example": 2
          },
          "sender_username": {
            "type": "string",
            "example": "Jack"
          },
          "receiver_username": {
            "type": "string",
            "example": "Rose"
          },
          "message": {
            "type": "string",
            "example": "Hello, I am superman!"
          },
          "send_at": {
            "type": "string",
            "format": "date-time",
            "example": "2022-12-06T07:50:16.830Z"
          }
        }
      },
      "chat-user-list-array": {
        "required": [
          "chatted_users"
        ],
        "properties": {
        "chatted_users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/chat-user-list"
            }
          }
        }
      },
      "chat-user-list": {
        "required": [
          "sender_id",
          "receiver_id",
          "sender_username",
          "receiver_username",
          "room"
        ],
        "type": "object",
        "properties": {
          "sender_id": {
            "type": "integer",
            "example": 1
          },
          "receiver_id": {
            "type": "integer",
            "example": 2
          },
          "sender_username": {
            "type": "string",
            "example": "Jack"
          },
          "receiver_username": {
            "type": "string",
            "example": "Rose"
          },
          "room": {
            "type": "string",
            "example": "1AND2"
          }
        }
      }
    }
  }
} 